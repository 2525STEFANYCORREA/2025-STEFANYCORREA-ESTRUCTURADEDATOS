using System;

namespace GestionEstudiante
{
    // Definición de la clase Estudiante
    // Encapsula los datos del estudiante con propiedades y un array para teléfonos
    public class Estudiante
    {
        // Propiedades para ID, nombres, apellidos y dirección
        public int ID { get; set; }
        public string Nombres { get; set; }
        public string Apellidos { get; set; }
        public string Direccion { get; set; }
        
        // Array unidimensional para almacenar hasta 3 números de teléfono
        // Tipo string para manejar prefijos y formatos
        public string[] Telefonos { get; set; }

        // Constructor para inicializar el objeto con datos específicos
        public Estudiante(int id, string nombres, string apellidos, string direccion, string[] telefonos)
        {
            ID = id;
            Nombres = nombres;
            Apellidos = apellidos;
            Direccion = direccion;
            Telefonos = telefonos; // Asigna el array directamente
        }

        // Método para mostrar toda la información del estudiante
        public void MostrarInformacion()
        {
            Console.WriteLine($"ID: {ID}");
            Console.WriteLine($"Nombres: {Nombres}");
            Console.WriteLine($"Apellidos: {Apellidos}");
            Console.WriteLine($"Dirección: {Direccion}");
            Console.WriteLine("Teléfonos:");
            for (int i = 0; i < Telefonos.Length; i++)
            {
                Console.WriteLine($"  - Teléfono {i + 1}: {Telefonos[i]}");
            }
        }
    }

    class Program
    {
        static void Main(string[] args)
        {
            // Declaración del array de teléfonos
            string[] telefonos = new string[3];
            telefonos[0] = "0959943518";
            telefonos[1] = "0959738860";
            telefonos[2] = "0980549949";

            // Creación del objeto Estudiante con los datos requeridos
            Estudiante estudiante = new Estudiante(
                2024001,    // ID ejemplo
                "Stefany",  // Nombres
                "Correa Avila", // Apellidos
                "Vía Panamericana sitio La Maria", // Dirección
                telefonos   // Array de teléfonos
            );

            // Ejecución del método para mostrar resultados
            Console.WriteLine("=== Registro del Estudiante ===");
            estudiante.MostrarInformacion();
        }
    }
}
